{
    "manifest_version": 3,
    "name": "Profile HTML Sender",
    "version": "1.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["tabs", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
         "https://www.linkedin.com/*",
        "https://www.instagram.com/*",
        "http://localhost:4000/*"
    ]
}